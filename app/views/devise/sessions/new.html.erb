<body class="lpage">
<div class="login">
<br><br><br>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="row">
  <div class="col-md-5"></div>
  <div class="col-md-2">
    <%= image_tag "archlogo.png", :class => "logo1" %>
  </div>
  <div class="col-md-5"></div>
</div>

<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <h2 class="text-center" style="color: white; text-align: center;">The easy way for teams of designers to annotate drawings and plans remotely.</h2> <br><br>   
  </div>
  <div class="col-md-4"></div>
</div>

<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Log in</h3>
          </div>
          <div class="panel-body">
        <!-- Email & Password & Butoon -->    
            <div class="row">
              <!-- <div class="col-md-1"></div> -->
              <div class="col-md-4">
                  <div class="field">
                    <%= f.label :email %><br />
                    <p class="field1"><%= f.email_field :email, autofocus: true, :class => "form-control" %></p>
                  </div>                
              </div>              
              <div class="col-md-4">
                  <div class="field">
                    <%= f.label :password %><br />
                    <p class="field1"><%= f.password_field :password, autocomplete: "off", :class => "form-control" %></p>
                  </div>
              </div>              
              <div class="col_md-1">
                  <div class="actions lbtn">
                    <%= f.submit "Log in" , :class => "btn btn-success login-button "%>
                  </div>                  
              </div>
            </div>
          <!-- Remember me & Sign up -->
            <div class="row">
                <!-- <div class="col-md-1"></div> -->
                <div class="col-md-4">
                    <% if devise_mapping.rememberable? -%>
                      <div class="field">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                      </div>
                    <% end -%>                  
                </div>
                <div class="col-md-4">
                    <%= render "devise/shared/links" %>
                </div>
                <div class="col-md-1"></div>
            </div>

          </div>
        </div>
      


  </div>
  <div class="col-md-3"></div>
</div>

  
  


<% end %>


</div>
</body>