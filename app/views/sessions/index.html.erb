<br>
<div class="container">
   <div class="row">
      
      <div class="col-md-5 jumbotron">
                  
          <% if @session.errors.any? %>
             <% @session.errors.full_messages.each do |error|%>
             <p class="text-danger">
                <%= error%>
             </p>
             <% end %>
          <% end %>         
           
            
         <%=form_for @session, html: { multipart: true } do |f|  %>
            
            <p><%= f.label "Session Name:" %> <%= f.text_field :name ,:placeholder => "Project name..." , :class =>"form-control"%></p>   
            <p><%= f.label "Session topic: " %> <%= f.text_area :description , size: "18x5" ,:placeholder => "Discussion topic...", :class => "form-control" %></p>   
             <p><b> Invite</b> <textarea class="form-control" rows="3" cols="25" placeholder="Enter email addresses here..."></textarea></p>
            <p><%= f.label "Date:" %>  <%= f.text_field :date,:placeholder => "mm/dd/yyyy", :class =>"form-control" %></p>
           
            <%= f.submit "Create Session", :class => "btn btn-success"%>
         <% end %>

         

      </div>
      <div class="col-md-1"></div>
      <div class="col-md-6">
         <div class="well">
         <div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">List of Sessions</div>
          <div class="table-responsive">
               <table class="table ">
                  <thead>
                     <th>Session</th>
                     <th>Date</th>
                     <th>Anttendees</th>
                     <th>Edit</th>
                  </thead>
                  <tbody>
                  <% @sessions.each do |session| %>   
                     <tr>
                        <td><%= session.name %></td>
                        <td><%= session.date %></td>
                        <td>
                            <%= @user.email %>
                            <span class="badge">4</span>
                        </td>
                        <td>
                           <%= link_to "Show", session_path(session), :class => "btn btn-primary"%>
                           <%= link_to "Edit", edit_session_path(session), :class => "btn btn-danger"%>
                           <%= link_to "Delete", session_path(session), :method => :delete,:class => "btn btn-warning", data: {confirm: "Are you Sure you want to delete this session?         NOTE: You won't be able to recover this session"} %>
                        </td>
                     </tr>
                  <% end %>      
                  </tbody>
               </table>
            </div>         

            </div>


      </div>
      
   </div>


  
   

</div>



