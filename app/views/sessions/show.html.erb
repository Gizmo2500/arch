<div class="container">
<h1><%=  @session.name %></h1>


   <div class="table-responsive">
      <table class="table table-bordered">
         <thead>
         <tr class="info">
            <th>Admin</th>
            <th>Description</th>
            <th>Session Date</th>
            <th>File Name</th>
            <th>File Size</th>
         </tr>
         </thead>
         <tbody>
            <tr>
               <td><%= @user.email %></td>
               <td><%=  @session.description %></td>
               <td><%=  @session.date %></td>
               <td><%=  @session.image_file_name %></td>
               <td><%=  @session.image_file_size %></td>
            </tr>
         </tbody> 
      </table>
   </div>



   <div class="row">
      <div class="col-md-10"><p class="image"><%= image_tag @session.image.url , class: "img-responsive" %></p></div>
      <div class="col-md-2">
         <div class="chat">Chat</div>
         <div class="logo">Annotations</div>
      </div>
   </div>
</div>





<hr>

<%= link_to "Index", sessions_path , :class => :"btn btn-primary" %>
<%= link_to "Delete All comments", sessions_path , :class => :"btn btn-warning delete-com" %>
<%= link_to "Save", sessions_path , :class => :"btn btn-warning save-com" %>


<%= content_tag :div, class: "session_info", data: {session: @session} do %>
<% end %>


<%= content_tag :div, class: "user_info", data: {user: @user} do %>
<% end %>
