<div class="container-fluid">
  <div class="col-md-10 col">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">  
<!-- Dropdown Menu -->

          <li class="menu-li">
            <div class="dropdown">
              <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                Session Menu
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                <li><a href="#"><%= link_to "Sessions Index", sessions_path  %></a></li>
                <li><a href="#"><%= link_to "Delete All comments", sessions_path %></a></li>
              </ul>
            </div>      
          </li>
<!-- Drawing buttons -->
          <li class="menu-li"><button class="btn btn-default post-button" type="button"> <span class="glyphicon glyphicon-tag" aria-hidden="true"></span></button></li>
          <li class="menu-li"><button class="btn btn-default pencil" type="button"> <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button></li>
          <span class="glyphicon glyphicon-option-vertical" aria-hidden="true"></span>
          <li class="menu-li"><%=form_for @session, html: { multipart: true } do |f|  %>
             <li class="menu-li">      <%= f.file_field :image%></li>
             <li class="menu-li">   <%= f.submit "Upload", :class => "btn btn-success "%></li>
                <% end %>
          </li>          

          <li class="menu-li"><button class="btn btn-default save-com" type="button"> <span class="glyphicon glyphicon-tag" aria-hidden="true"></span></button></li>
        </h3>
<!-- Image -->
              <!-- <canvas class="canva" width="855" height="475"></canvas>  -->
              <% if @session.image_file_name != nil %>
                 <p class="shade"><%= image_tag @session.image.url , class: "img-responsive image" %></p>
              <% else %>
                 <p>Add an Image</p>
              <% end %>
            

      </div>
    </div>
  </div>
  <div class="col-md-2 col">
<!-- Attendees -->  
     <!-- <div class="attendees well well-sm"> -->
      <div class="panel panel-primary scroll-bar chat">
        <div class="panel-heading">
          <h3 class="panel-title"><b>Session: </b><%=  @session.name %></h3>
        </div>
        <div class="panel-body">
           <p> Session topic: <%=  @session.description %></p>   
        </div>
     </div>
            
<!-- Chat -->
      <!-- <div class="chat well well-sm"> -->
         <div class="panel panel-primary scroll-bar chat">
           <div class="panel-heading">
             <h3 class="panel-title">Live Chat</h3>
           </div>
           <div class="panel-body">
             <ul>
                  <li class="chat-mss">Label 1</li>   
                  <li class="chat-mss1">Label 2</li>
                  <li class="chat-mss">Label 3</li>
                  <li class="chat-mss1">Label 1</li>   
                  <li class="chat-mss">Label 3</li>
                  <li class="chat-mss1">Label 1</li>   
             </ul>
           </div>
         </div>            
      <!-- </div> -->

  <!-- Annotations -->

            <!-- <div class="log well well-sm"> -->
        <div class="panel panel-primary scroll-bar log">
           <div class="panel-heading">
             <h3 class="panel-title">Annotations</h3>
           </div>
           <div class="panel-body comment-window" >
               <% @posts.each do |post| %>
                <div class="annotation-user"><%= post.updated_at.in_time_zone("Pacific Time (US & Canada)").strftime("%I:%M%p") %> - <%=  @user.email %> </div>
                <div class="annotation-comm"><b> <%=  post.title %> </b><%= post.comments %></div>
                  
               <% end %>                  
           </div>
        </div> 



  </div>
</div>

